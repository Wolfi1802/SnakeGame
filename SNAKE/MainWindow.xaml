<Window x:Class="SNAKE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SNAKE"
        mc:Ignorable="d"
        Title="Snake" SizeToContent="WidthAndHeight"
        Icon="pack://application:,,,/Resources/Snake.png">
    <Window.Resources>
        <ResourceDictionary>
            <BitmapImage x:Key="Icon" UriSource="pack://application:,,,/Resources/Snake.png" />
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Border BorderBrush="Black" BorderThickness="5">
            <Canvas Name="GameArea" ClipToBounds="True" Width="400" Height="400">
            </Canvas>
        </Border>
    </Grid>
</Window>
