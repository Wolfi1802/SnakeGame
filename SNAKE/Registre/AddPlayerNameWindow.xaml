<Window x:Class="SNAKE.Registre.AddPlayerNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SNAKE.Registre"
        mc:Ignorable="d"
        Title="Anmelden" Height="200" Width="250" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="5">
        <Border Margin="5" BorderBrush="Black" BorderThickness="1">
            <TextBox Text="{Binding UserName,UpdateSourceTrigger=PropertyChanged}" Height="23" Width="200" Margin="5" TextAlignment="Center"></TextBox>
        </Border>
        <Button Content="Als Nutzer eintragen lassen." Command="{Binding Registre}" Height="23" Width="200" Margin="5" Background="Transparent" BorderBrush="Black" BorderThickness="1"></Button>
    </StackPanel>
</Window>
